@model Wedding

<form action="/create/wedding" method="post" class="col-5 mx-auto">
    <input type="hidden" asp-for="UserId" value="@ViewBag.User.UserId">
    <div class="form-group">
        <label asp-for="WedderOne"></label>
        <input asp-for="WedderOne" class="form-control">
        <span class="text-danger" asp-validation-for="WedderOne"></span>
    </div>
    <div class="form-group">
        <label asp-for="WedderTwo"></label>
        <input asp-for="WedderTwo" class="form-control">
        <span class="text-danger" asp-validation-for="WedderTwo"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control">
        <span class="text-danger" asp-validation-for="Date"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control">
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>
    <input type="submit" value="Plan Wedding" class="btn btn-primary btn-outline-light">
</form>