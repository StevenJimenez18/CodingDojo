@{
    ViewData["Title"] = "Home Page";
}
@model Dish

<h1>Update your Dish!</h1>


<form asp-action="EditUpdate" method="post">
    <input type="hidden" asp-for="DishesId" value="@Model.DishesId">
    <div class=" form-group">
        <label asp-for="ChefName"></label>
        <input class="form-control" asp-for="ChefName">
        <span class="text-danger" asp-validation-for="ChefName"></span>
    </div>
    <div class="form-group">
        <label asp-for="DishName"></label>
        <input class="form-control" asp-for="DishName">
        <span class="text-danger" asp-validation-for="DishName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Calories"></label>
        <input class="form-control" asp-for="Calories">
        <span class="text-danger" asp-validation-for="Calories"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tastiness"></label>
        <select class="form-control" asp-for="Tastiness">
            <option></option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span class="text-danger" asp-validation-for="Tastiness"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <input type="submit" value="Submit" class="btn btn-outline-success">
</form>